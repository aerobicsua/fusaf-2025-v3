{
  "name": "fusaf-system",
  "version": "1.0.0",
  "description": "Федерація України зі Спортивної Аеробіки і Фітнесу - Система управління",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0",
    "build": "next build",
    "start": "next start -H 0.0.0.0",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:integration": "bun test tests/integration",
    "test:api": "bun test tests/api",
    "test:e2e": "playwright test",
    "postinstall": "",
    "health-check": "node healthcheck.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:backup": "node scripts/backup.js",
    "docker:build": "docker build -t fusaf-system .",
    "docker:run": "docker run -p 3000:3000 fusaf-system",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "deploy:staging": "scripts/deploy-staging.sh",
    "deploy:production": "scripts/deploy-production.sh",
    "docs:build": "swagger-jsdoc -d src/lib/swagger.ts -o docs/swagger.json",
    "docs:serve": "swagger-ui-serve docs/swagger.json",
    "security:audit": "bun audit",
    "security:fix": "bun audit --fix",
    "analyze": "ANALYZE=true bun run build",
    "clean": "rimraf .next out dist",
    "prepare": "husky install"
  },
  "dependencies": {
    "@netlify/plugin-nextjs": "^5.11.6",
    "@radix-ui/react-checkbox": "^1.0.0",
    "@radix-ui/react-dialog": "^1.0.0",
    "@radix-ui/react-dropdown-menu": "^2.0.0",
    "@radix-ui/react-progress": "^1.0.0",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-tabs": "^1.0.0",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "bcryptjs": "^2.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "jsonwebtoken": "^9.0.0",
    "lucide-react": "^0.292.0",
    "mysql2": "^3.6.0",
    "next": "^14.0.0",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-react": "^5.27.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.2.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/uuid": "^9.0.0",
    "@types/swagger-ui-react": "^5.18.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0",
    "@next/bundle-analyzer": "^14.0.0",
    "rimraf": "^5.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "keywords": [
    "fusaf",
    "ukraine",
    "aerobics",
    "fitness",
    "sports",
    "federation",
    "management",
    "system",
    "nextjs",
    "typescript",
    "mysql",
    "docker"
  ],
  "author": {
    "name": "FUSAF Development Team",
    "email": "tech@fusaf.org.ua",
    "url": "https://fusaf.org.ua"
  },
  "license": "Proprietary",
  "repository": {
    "type": "git",
    "url": "https://github.com/fusaf-ukraine/fusaf-system.git"
  },
  "bugs": {
    "url": "https://github.com/fusaf-ukraine/fusaf-system/issues"
  },
  "homepage": "https://fusaf.org.ua"
}
